			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider" />
			<ref component-id="jacksonContextResolver"/>
		</jaxrs:providers>
		<jaxrs:serviceBeans>
			<ref component-id="siteRs" />
		</jaxrs:serviceBeans>
	</jaxrs:server>	
	
